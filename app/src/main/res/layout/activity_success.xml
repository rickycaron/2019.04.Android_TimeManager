<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme"
    android:orientation="vertical"
    tools:context=".Success">

    <ImageView
        android:id="@+id/imageView71"
        android:layout_width="147dp"
        android:layout_height="154dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/chick" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Congratulations!"
        android:textSize="48dp"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/textView71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:text="You achieved  your goal"
        android:textSize="22dp"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="80dp">

        <EditText
            android:id="@+id/editText71"
            android:layout_margin="20dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Input your username"
            />

        <Button
            android:id="@+id/button72"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:text="Check in"
            android:background="@drawable/custom_button0"
            />

    </LinearLayout>



    <Button
        android:id="@+id/button71"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="See the ranking"
        android:background="@drawable/custom_button0"
        android:textSize="25dp" />

</LinearLayout>
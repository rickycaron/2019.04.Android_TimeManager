<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme"
    android:orientation="vertical"
    tools:context=".Success">
    <TextView
        android:id="@+id/textView71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:text="Congratulations! You achieved your goal!"
        android:textSize="40dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="80dp">

        <EditText
            android:id="@+id/editText71"
            android:layout_margin="20dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Input your username"
            />

        <Button
            android:id="@+id/button72"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:text="Check"
            />

    </LinearLayout>



    <Button
        android:id="@+id/button71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="See the ranking"
        android:textSize="25dp" />

</LinearLayout>